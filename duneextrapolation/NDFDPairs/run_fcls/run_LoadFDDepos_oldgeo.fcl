#include "services_dune.fcl"
#include "LoadFDDeposConfig.fcl"

process_name: LoadFDDepos

source:
{
  module_type: EmptyEvent
  timestampPlugin: { plugin_type: "GeneratedEventTimestamp" }
  maxEvents:   10
  firstRun:    1
  firstEvent:  1
}

services:
{
  @table::dunefd_services
  TimeTracker:           {}
  MemoryTracker:         {} # default is one
  RandomNumberGenerator: {} # ART native random number generator
}

outputs:
{
  out1:
  {
    module_type:      RootOutput
    fileName:	        "LoadedFDDeps.root"
    dataTier:         "simulated"
    compressionLevel: 1
  }
}

physics:
{
  producers:
  {
    // Match module label incase this is relied upon upstream
    largeant: @local::LoadFDDepos
    rns:      { module_type: "RandomNumberSaver" }
  }
  simulate:      [ rns, largeant ]
  stream1:       [ out1 ]
  trigger_paths: [simulate]
  end_paths:     [stream1]
}

services.Geometry: @local::dune10kt_1x2x6_geo
services.Geometry.GDML: "dune10kt_v2_1x2x6.gdml"
services.Geometry.Name: "dune10kt_v2_1x2x6"
services.Geometry.ROOT: "dune10kt_v2_1x2x6.gdml"
# TDR geant used a voxel grid with size 0.03cm. This is as close as we can get to emulating this.
physics.producers.largeant.TargetSEDLen: 0.03

physics.producers.largeant.NDFDH5FileLoc: ""

